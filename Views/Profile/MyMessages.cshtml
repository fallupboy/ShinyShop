@model List<ShinyShop.Models.Message>

@{
    ViewData["Title"] = "MyMessages";
}

<div class="row" style="align-items: center;">
    <h2 style="padding: 10px;">My Messages</h2>
    <a class="btn btn-success" asp-action="CreateMessage">Create New</a>
</div>


@if (Model.Count <= 0)
{
    <h2>You don't have any messages</h2>
}
else
{
    <div class="sidenav">

    </div>
    <table class="table">
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Text) | From: @Html.DisplayFor(modelItem => item.SenderUsername)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
